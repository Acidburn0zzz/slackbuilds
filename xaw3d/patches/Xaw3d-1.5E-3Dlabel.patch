     preferred->request_mode = CWWidth | CWHeight;
     preferred->width = (lw->label.label_width + 
 			    2 * lw->label.internal_width +
+			    2 * lw->threeD.shadow_width +
 			    LEFT_OFFSET(lw));
     preferred->height = lw->label.label_height + 
