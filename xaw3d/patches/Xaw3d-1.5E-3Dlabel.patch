+    Position leftedge = lw->label.internal_width + LEFT_OFFSET(lw) +
+			lw->threeD.shadow_width;
 
     switch (lw->label.justify) {
 	case XtJustifyLeft:
 	    newPos = leftedge;
 	    break;
 	case XtJustifyRight:
-	    newPos = width - lw->label.label_width - lw->label.internal_width;
+	    newPos = width - (lw->label.label_width + lw->label.internal_width +
+			      lw->threeD.shadow_width);
 	    break;
 	case XtJustifyCenter:
 	default:
