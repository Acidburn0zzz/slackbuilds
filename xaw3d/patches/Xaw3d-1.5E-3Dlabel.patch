+		2 * newlw->label.internal_width +
+		2 * newlw->threeD.shadow_width +
+		LEFT_OFFSET(newlw);		    /* req's label.lbm_width */
 	    if (i > newlw->core.width)
 		newlw->core.width = i;
 	}
