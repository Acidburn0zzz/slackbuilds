[Unit]
Description=Network Time Service
After=syslog.target network.target ntpdate.service
BindTo=systemd-timedated-ntp.target

[Service]
Type=forking
EnvironmentFile=/etc/default/ntpd
ExecStart=/usr/sbin/ntpd -u ntp:ntp $NTPD_OPTIONS
PrivateTmp=true
ControlGroup=cpu:/

[Install]
WantedBy=multi-user.target
